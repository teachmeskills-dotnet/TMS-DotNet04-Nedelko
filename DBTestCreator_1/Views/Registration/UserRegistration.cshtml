@{
}
@model DBTestCreator_1.ViewModels.UserModel

<h4>User registration :</h4>
@ViewBag.Message
<form asp-controller="Registration" asp-action="UserRegistration">
<div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name"></label><br />
        <input asp-for=Name required/>
        <span asp-validation-for="Name"></span>
    </div><br />
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" required/>
        <span asp-validation-for="Email"></span>
    </div><br />
    <div>
        <select name="userType">
            <option value="Doctor" selected>Doctor</option>
            <option value="Patient">Patient</option>
            <option value="Administrator">Administrator</option>
        </select><br /><br />
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" required/>
        <span asp-validation-for="Password"></span>
    </div><br />
    <div>
        <label asp-for="ConfirmPassword"></label><br />
        <input asp-for="ConfirmPassword" required/>
        <span asp-validation-for="ConfirmPassword"></span>
    </div><br />
    <input type="submit" value="Register" />
</form>
